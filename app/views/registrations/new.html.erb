<h1>Sign Up</h1>




<%= form_with model: @user, url: sign_up_path do |f| %>

  <% if f.object.errors.any? %>
  <div class="alert alert-danger">
    <% f.object.errors.full_messages.each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>
  <% end %>


  <%= f.text_field :email ,placeholder:'example@gmail.com' ,class:'mt-2 form-control'%>
  <br>
  <%= f.password_field :password ,placeholder:'Password' ,class:'mt-2 form-control'%>
  <br>
  <%= f.password_field :password_confirmation, placeholder:'Confrirm password',class:'mt-2 form-control' %>
  <div class="mt-3">
    <%= f.submit "sign up" ,class:'btn btn-primary' %>
  </div>
<% end %>